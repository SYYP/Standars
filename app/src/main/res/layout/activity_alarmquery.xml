<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <include layout="@layout/toolbar" android:id="@+id/lasdiueue"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#c912b7f5"
            android:layout_height="@dimen/base70dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称:"
                android:textSize="@dimen/base13dp"
                android:textColor="#101010"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/base13dp"
                />
            <EditText
                android:id="@+id/tv_edit_name"
                android:layout_width="@dimen/base80dp"
                android:layout_height="@dimen/base30dp"
                android:layout_marginLeft="@dimen/base9dp"
                android:layout_gravity="center"
                android:hint="请输入名称"
                android:textColor="#4c8fd2"
                android:gravity="center"
                android:textSize="@dimen/base13dp"
                style="@style/edit"
                />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报警类型:"
                android:textSize="@dimen/base13dp"
                android:textColor="#101010"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/base13dp"
                />
            <TextView
                android:id="@+id/tv_edit_"
                android:layout_width="@dimen/base80dp"
                android:layout_height="@dimen/base30dp"
                android:layout_marginLeft="@dimen/base9dp"
                android:layout_gravity="center"
                android:text="全部"
                android:textColor="#4c8fd2"
                android:drawableRight="@drawable/xiaxia"
                android:gravity="center"
                android:textSize="@dimen/base13dp"
                style="@style/edit"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间:"
                android:textSize="@dimen/base13dp"
                android:textColor="#101010"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/base13dp"
                />
            <LinearLayout
                android:layout_width="@dimen/base100dp"
                android:layout_gravity="center"
                android:background="@drawable/editext_shape_two"
                android:layout_height="@dimen/base30dp">
                <EditText
                    android:id="@+id/ed_muchtrend_strattime"
                    android:layout_width="@dimen/base70dp"
                    android:textColor="#4c8fd2"
                    android:layout_height="@dimen/base27dp"
                    android:editable="false"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:textSize="@dimen/base15dp"
                    />
                <ImageButton
                    android:id="@+id/but_muchtrend_strattime"
                    style="@style/Ibutton"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至"
                android:textSize="@dimen/base13dp"
                android:textColor="#101010"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/base13dp"
                />
            <LinearLayout
                android:layout_width="@dimen/base100dp"
                android:background="@drawable/editext_shape_two"
                android:layout_marginLeft="@dimen/base10dp"
                android:layout_gravity="center"
                android:layout_height="@dimen/base30dp">
                <EditText
                    android:id="@+id/ed_muchtrend_endtime"
                    android:layout_width="@dimen/base70dp"
                    android:textColor="#4c8fd2"
                    android:layout_height="@dimen/base27dp"
                    android:editable="false"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:textSize="@dimen/base15dp"
                    />
                <ImageButton
                    android:id="@+id/but_muchtrend_endtime"
                    style="@style/Ibutton"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询"
                android:textSize="@dimen/base13dp"
                android:textColor="#4c8fd2"
                android:layout_marginRight="@dimen/base10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/base13dp"
                />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>
</LinearLayout>
