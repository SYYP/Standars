<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base45dp"
        android:id="@+id/item_test_rela"
        android:background="#ffffff"
        android:layout_marginLeft="25dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实时监测"
            android:id="@+id/item_test_tv"
            android:textColor="#333333"
            android:textSize="@dimen/base13dp"
            android:layout_marginLeft="@dimen/base30dp"
            android:drawablePadding="@dimen/base8dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/menu_next"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xian"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>

</LinearLayout>
