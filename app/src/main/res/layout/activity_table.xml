<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <include layout="@layout/toolbar" android:id="@+id/lasdiueue"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base30dp"
                android:background="#c912b7f5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/base50dp"
                    android:text="单位："
                    android:textSize="@dimen/base13dp" />

                <EditText
                    android:id="@+id/ed_unit"
                    android:layout_width="@dimen/base150dp"
                    android:layout_height="@dimen/base27dp"
                    android:layout_gravity="center"
                    android:background="@drawable/editext_shape_two"
                    android:editable="false"
                    android:gravity="center"
                    android:paddingLeft="@dimen/base5dp"
                    android:text="清河污水厂"
                    android:textColor="#4c8fd2"
                    android:drawableRight="@drawable/xiaxia"
                    android:textSize="@dimen/base12dp" />


                <TextView
                    android:id="@+id/tv_goujian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/base100dp"
                    android:text="构建物:"
                    android:textSize="@dimen/base13dp" />



                <EditText
                    android:id="@+id/ed_goujian"
                    android:layout_width="@dimen/base150dp"
                    android:layout_height="@dimen/base27dp"
                    android:gravity="center"
                    android:paddingLeft="@dimen/base5dp"
                    android:text="进水泵房以及栅格间"
                    android:textColor="#4c8fd2"
                    android:layout_gravity="center"
                    android:background="@drawable/editext_shape_two"
                    android:drawableRight="@drawable/xiaxia"
                    android:textSize="@dimen/base13dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base30dp"
                android:background="#c912b7f5"
                android:layout_marginTop="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_yibiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/base50dp"
                    android:text="@string/zb"
                    android:textSize="@dimen/base13dp" />

                <EditText
                    android:layout_marginLeft="8dp"
                    android:id="@+id/ed_yibiao"
                    android:layout_width="@dimen/base150dp"
                    android:layout_height="@dimen/base27dp"
                    android:layout_gravity="center"
                    android:background="@drawable/editext_shape_two"
                    android:editable="false"
                    android:paddingLeft="@dimen/base5dp"
                    android:text="仪表"
                    android:gravity="center"
                    android:textColor="#4c8fd2"
                    android:drawableRight="@drawable/xiaxia"
                    android:textSize="@dimen/base12dp" />
                <Button
                    android:layout_width="@dimen/base70dp"
                    android:layout_height="@dimen/base27dp"
                    android:background="@drawable/editext_shape_two"
                    android:text="查询"
                    android:layout_marginLeft="@dimen/base30dp"
                    android:layout_gravity="center"
                    android:id="@+id/run_data_btn"
                    android:textSize="@dimen/base15dp"
                    />
            </LinearLayout>
            <LinearLayout
        android:orientation="vertical"
        android:id="@+id/contentViews"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
